# CTF Platform Environment Variables
# Copy this file to .env and update the values for your environment

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Admin Account Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123!
ADMIN_EMAIL=admin@ctfplatform.com

# Database Configuration
DEV_DATABASE_URL=sqlite:///ctf_platform_dev.db
DATABASE_URL=sqlite:///ctf_platform.db

# Optional: Redis for rate limiting (leave empty for memory-based)
# REDIS_URL=redis://localhost:6379/0

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CHALLENGE_MEMORY=512m
CHALLENGE_TIMEOUT=30

# Development Settings
FLASK_ENV=development
FLASK_DEBUG=True
